{
    "compilerOptions": {
        "composite": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext"],
        "types": ["node"],
        "noEmit": true,
        "paths": {
            "*": ["./*"],
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/vite.config.js",
        "src/shared/utils/localizationHelperCLI.js"
    ],
    "exclude": ["node_modules", "build"]
}

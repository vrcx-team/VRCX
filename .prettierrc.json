{
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "endOfLine": "auto",
    "plugins": ["@prettier/plugin-pug"],
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "parser": "meriyah"
            }
        },
        {
            "files": "*.pug",
            "options": {
                "pugPrintWidth": 120,
                "pugAttributeSeparator": "none",
                "pugBracketSameLine": true
            }
        },
        {
            "files": "*.vue",
            "options": {
                "printWidth": 120,
                "bracketSameLine": true,
                "vueIndentScriptAndStyle": true
            }
        }
    ]
}

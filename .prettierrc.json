{
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always",
    "vueIndentScriptAndStyle": true,
    "endOfLine": "auto",
    "plugins": [
        "@prettier/plugin-pug"
    ],
    "overrides": [
        {
            "files": "*.pug",
            "options": {
                "pugPrintWidth": 120,
                "pugAttributeSeparator": "none",
                "pugBracketSameLine": true
            }
        },
        {
            "files": "*.vue",
            "options": {
                "printWidth": 120
            }
        }
    ]
}